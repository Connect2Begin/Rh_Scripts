-- Quote text considering selected block.
-- Закавычивание текста с учётом выделенного блока.
--[[
  -- @params:
  left  (string) - left "quote".
  right (string) - right "quote".
--]]
local function QuoteSelection (left, right) --> (macro)
  local Info = farEdit.GetInfo()
  local SelType = farUt.BlockTypes[SelInfo.BlockType]

  if SelType == "none" then -- Нет блока:
    if not farEdit.InsText(Info.EditorID, left) then return end
    local Info = farEdit.GetInfo()
    if not farEdit.InsText(Info.EditorID, right) then return end
    if not farEdit.SetPos(Info.EditorID, Info) then return end

    return true
  end

  local SelInfo = editor.GetSelection()
  if SelInfo == nil then return end -- Нет блока?

  local block = farEditor.CutSelection(Info, SelType)
  if not block then return end

  if     SelType == "stream" then
    if type(block) == 'string' then
      block = left..block..right
    elseif type(block) == 'table' then
      block[1] = left..block[1]
      block[#block] = block[#block]..right
    end

  elseif SelType == "column" then
    if type(block) == 'string' then
      block = left..block..right
    elseif type(block) == 'table' then
      for k = 1, #block do
        block[k] = left..block[k]..right
      end
    end

  end
  if not farEditor.PasteSelection(Info, block, SelType) then return end

  return true
end -- QuoteSelection

-- Unquote text considering selected block.
-- Раскавычивание текста с учётом выделенного блока.
--[[
  -- @params:
  left  (s|n|nil) - left "quote" or its length: @default = 1.
  right (s|n|nil) - right "quote" or its length: @default = left.
--]]
local function UnquoteSelection (left, right) --> (macro)
  local SelInfo = farEditor.GetSelection()
  if SelInfo == nil then return end -- Нет блока?

  -- Define params:
  if left == nil then
    left = 1
  elseif type(left) == 'string' then
    left = left:len()
  end
  if right == nil then
    right = left
  elseif type(right) == 'string' then
    right = right:len()
  end

  local SelType = farUt.BlockTypes[SelInfo.BlockType]
  local block = farEditor.CutSelection(farEdit.GetInfo(), SelType)
  if not block then return end

  --logShow({ left, right, block }, SelType)

  if     SelType == "stream" then
    if type(block) == 'string' then
      local len = block:len()
      if len <= left + right then
        block = ""
      elseif block:sub(len, len) ~= "\r" then
        block = block:sub(left + 1, len - right)
      else
        block = block:sub(left + 1, len - right - 1).."\r"
      end
    elseif type(block) == 'table' then
      block[1] = block[1]:sub(left + 1, -1)
      block[#block] = block[#block]:sub(1, -right - 1)
    end

  elseif SelType == "column" then
    if type(block) == 'string' then
      local len = block:len()
      if len <= left + right then
        block = ""
      else
        block = block:sub(left + 1, len - right)
      end
    elseif type(block) == 'table' then
      for k = 1, #block do
        block[k] = block[k]:sub(left + 1, -right - 1)
      end
    end

  end -- if

  if not farEditor.PasteSelection(farEdit.GetInfo(), block, SelType) then
    return
  end

  return true
end -- UnquoteSelection

